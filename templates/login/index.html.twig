{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	<main class="login-container">

		<header>
			<h2>Connexion</h2>
		</header>
	{% if error %}
		<div class="text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

		<section>
			<form action="{{ path('app_login') }}" method="post">
				<div>
					<label for="username">Email :</label>
					<div class="mt-2">
						<input type="email" id="username" name="_username" value="{{ last_username }}" required/>
					</div>
				</div>
				<div>
					<div class="flex items-center justify-between">
						<label for="password">Mot de passe :</label>
						<div class="text-sm">
							<a href="#" class="font-semibold text-indigo-400 hover:text-indigo-500">Mot de passe oubli√© ?</a>
						</div>
					</div>
					<div class="mt-2">
						<input type="password" id="password" name="_password" required>
					</div>
				</div>

				{# If you want to control the URL the user is redirected to on success  #}
				<input type="hidden" name="_target_path" value="/dashboard">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div>
					<button type="submit">Connexion</button>
				</div>
			</form>
		</section>
	</main>
{% endblock %}
