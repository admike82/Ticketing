<article class="ticket {{ hidden ? 'dropdown-ticket'}}">
	<div class="flex justify-between">
		<div>
			<span style="--bg-color: {{ticket.level.color}};">{{ticket.level.name}}</span>
			<span style="--bg-color: {{ticket.status.color}};">{{ticket.status.name}}</span>
		</div>
		{% if ticket.status.close %}
			<span class="text-green-700 font-bold">Clos</span>
		{% else %}
			<a href="{{ path('app_dashboard_tickets_close', {id: ticket.id}) }}" class="btn">Cloturer</a>
		{% endif %}
	</div>
	<h5>{{ticket.subject }}</h5>
	{% if ticket.application %}
		<h6>{{ticket.application.name}}</h6>
	{% endif %}
	<small>{{ticket.author ?? (ticket.userAccount.firstName ~ ' ' ~ ticket.userAccount.name) }}</small>
	<strong class="info-responses">
		{{ticket.responses | length}}
		<img src="/images/Shape.png" alt="shape"/>
	</strong>
	<p>
		{{ticket.content | nl2br}}
	</p>
	{% if hidden %}
		<p class="flex justify-center !mt-2">
			<a href="{{ path('app_dashboard_responses', {id: ticket.id}) }}" class="btn">RÃ©pondre</a>
		</p>
	{% endif %}
</article>
