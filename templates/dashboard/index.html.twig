{% extends 'base.html.twig' %}

{% block title %}DashboardController
{% endblock %}

{% block body %}
	<div class="dashboard-main-content">
		{% for ticket in tickets %}
			<div class="ticket">
				<h5 class="ticket-title">{{ticket.author ?? ticket.userAccount.name}}</h5>
				<div class="ticket-tag-container">
					<div style="--bg-color: {{ticket.status.color}};" class="ticket-tag">{{ticket.status.name}}</div>
					<div style="--bg-color: {{ticket.level.color}};" class="ticket-tag">{{ticket.level.name}}</div>
				</div>
				<p class="ticket-content">
					{{ticket.content}}
				</p>
			</div>
		{% endfor %}
	</div>
{% endblock %}
