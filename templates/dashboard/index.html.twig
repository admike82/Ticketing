{% extends 'base.html.twig' %}

{% block title %}DashboardController
{% endblock %}

{% block body %}
	<div class="dashboard-content">
		{% for ticket in tickets %}
			<div class="ticket">
				<h5>{{ticket.author ?? ticket.userAccount.name}}</h5>
				<section>
					<div style="--bg-color: {{ticket.status.color}};">{{ticket.status.name}}</div>
					<div style="--bg-color: {{ticket.level.color}};">{{ticket.level.name}}</div>
				</section>
				<p>
					{{ticket.content}}
				</p>
			</div>
		{% endfor %}
	</div>
{% endblock %}
